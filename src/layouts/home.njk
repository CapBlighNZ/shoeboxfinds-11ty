---
layout: base
---

<header class="hero">
  <div class="hero-content">

    <div class="intro">
      {{ content | safe }}
    </div>

    {% if site.socialLinks %}
      <ul class="hero__social-links">
        {% for item in site.socialLinks %}
          {% set externalAttribute = '' %}

          {% if item.external %}
            {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %}
          {% endif %}
<!--<a href="{{item.url}}" target="_blank" class="p-5 border rounded border-gray-200 hover:border-purple-400">
                <h3>{{item.text}}
                    â†’</h3>
                <p>{{item.desc}}</p>
            </a> -->
          <li>
            <a href="{{ item.url | url }}" {{ externalAttribute | safe }}>{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>

</header>
<section class="post-list__wrapper">
  <h2 class="post-list__heading">Recent Posts</h2>

  {% set postslist = collections.posts | head(-3) %}
  {% include "posts-list.njk" %}

</section>

<a class="all-posts-link" href="{{ '/blog/' | url }}">View All Posts</a>
